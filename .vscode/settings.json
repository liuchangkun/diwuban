{
  "files.exclude": {
    "venv": true,
    ".venv": true,
    "env": true,
    "data": true,
    "ProjectDocs": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".pytest_cache": true,
    ".mypy_cache": true,
    ".ruff_cache": true,
    ".tox": true,
    ".cache": true,
    ".ipynb_checkpoints": true,
    "htmlcov": true
  },
  "search.exclude": {
    "venv": true,
    ".venv": true,
    "env": true,
    "data": true,
    "ProjectDocs": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".pytest_cache": true,
    ".mypy_cache": true,
    ".ruff_cache": true,
    ".tox": true,
    ".cache": true,
    ".ipynb_checkpoints": true,
    "htmlcov": true
  },
  "python.analysis.exclude": [
    "venv",
    ".venv",
    "env",
    "data",
    "ProjectDocs",
    "**/__pycache__",
    "**/*.pyc",
    ".pytest_cache",
    ".mypy_cache",
    ".ruff_cache",
    ".tox",
    ".cache",
    ".ipynb_checkpoints",
    "htmlcov"
  ],

  // 保存即自动格式化与修复
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  // 保存 Markdown 时尽量交给 mdformat（需安装 emeraldwalk.runonsave 扩展）
  "emeraldwalk.runonsave": {
    "commands": [
      { "match": "^docs/.*\\.md$", "cmd": "mdformat ${file}" },
      {
        "match": "^(docs/PLAYBOOKS/.*\\.md|docs/文档地图与导航\\.md)$",
        "cmd": "python scripts/tools/memory_index.py"
      }
    ]
  }
}
